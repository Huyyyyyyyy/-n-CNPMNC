@model cnpmNC.Models.UuDai
@{
    ViewBag.Title = "CapNhatUuDai";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<style>
    .link {
        width: 100%;
        height: 20px;
        margin: 50px 5px 5px 5px;
    }

        .link ul {
            width: 100%;
            list-style-type: none;
            display: flex;
        }

            .link ul a {
                text-decoration: none;
                font-weight: bold;
                font-size: 12px;
                color: #005574;
            }

                .link ul a i {
                    margin: 0 10px 0 10px;
                }

    .form h1 {
        border-radius: 4px 4px 0 0;
        padding: 10px 20px;
        margin: 0 0 25px 0;
        background-color: #005574;
        color: #fff;
        font-size: 18px;
        line-height: 22px;
    }

    .form {
        position: relative;
        background-color: #fff;
        border-radius: 4px;
        margin: 30px 30px 35px 30px;
        transition: box-shadow 200ms;
        width: 620px;
        display: inline-block;
    }


        .form .form-input input {
            display: block;
            box-sizing: border-box;
            width: 260px;
            height: 2.3125rem;
            padding: 0.5rem;
            border: 1px solid #BCC8D7;
            font-family: inherit;
            font-size: 0.875rem;
            color: #636466;
            background-color: #fefefe;
            border-radius: 3px;
        }

        .form .form-input select {
            display: block;
            box-sizing: border-box;
            width: 260px;
            height: 2.3125rem;
            padding: 0.5rem;
            border: 1px solid #BCC8D7;
            font-family: inherit;
            font-size: 0.875rem;
            color: #636466;
            background-color: #fefefe;
            border-radius: 3px;
        }

        .form .form-input label {
            font-size: 0.875rem;
            font-weight: bold;
            line-height: 1.8;
            color: #636466;
            margin-left: 20px;
        }

        .form .form-input {
            margin-right: 10px;
            height: 80px;
        }
</style>
<div class="link">
    <ul>
        <li><a href="~/QuanLyUuDai/DanhSachUuDai">Quản lý ưu đãi<i class="ti-angle-double-right"></i></a></li>
        <li><a href="~/QuanLyUuDai/CapNhatUuDai">Cập nhật</a></li>
    </ul>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form form-horizontal">
        <h1>Cập nhật ưu đãi</h1>
        @Html.HiddenFor(model => model.MaUD)
        <div class="form-input form-group" style="display:inline-block;">
            <label for="MucUD">Mức ưu đãi</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MucUD, new { @class = "form-control", type = "number" })
            </div>
        </div>

        <div class="form-input form-group" style="display:inline-block;">
            <label for="MucUD">Thời gian ưu đãi</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ThoiGianUD, new { @class = "form-control", type = "date" })
            </div>
        </div>
    </div>

    <div class="form-input" style="display:inline-block;">
        <a style="text-decoration: none; display: inline-block; background: #005574; color: #ffff; padding: 6px 10px 6px 10px; 
                border-radius: 4px; margin: 0 0 0 16px !important " href="~/QuanLyUuDai/DanhSachUuDai"><i class="ti-back-left"></i></a>
    </div>

    <div class="form-input form-group" style="display:inline-block;">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" style="width: 195px; background: #005574; color: #ececec" value="Cập nhật" class="btn btn-default" />
        </div>
    </div>
}    
