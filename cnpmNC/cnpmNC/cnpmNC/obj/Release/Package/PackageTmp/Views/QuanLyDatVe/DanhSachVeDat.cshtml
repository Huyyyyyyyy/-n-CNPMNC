@model IEnumerable<cnpmNC.Models.DatVe>

@{
    ViewBag.Title = "DanhSachVeDat";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<style>
    .link {
        width: 100%;
        height: 20px;
        margin: 50px 5px 5px 5px;
    }

        .link ul {
            width: 100%;
            list-style-type: none;
            display: flex;
        }

            .link ul a {
                text-decoration: none;
                font-weight: bold;
                font-size: 12px;
                color: #00305B;
            }

                .link ul a i {
                    margin: 0 10px 0 10px;
                }

    .managerCB {
    }

        .managerCB h1 {
            border-radius: 4px 4px 0 0;
            padding: 10px 20px;
            margin: 0px 0 5px 0;
            background-color: #005574;
            color: #fff;
            font-size: 18px;
            line-height: 22px;
        }

    input:focus {
        outline: none;
    }

    .table-manager {
        width: 100%;
    }

    .managerCB .table-manager thead th {
        color: #222;
        width: 80px;
        text-align: center;
        border: 1px solid #005574;
        background-color: #ebbd40;
    }

    .managerCB .table-manager tbody td {
        width: 80px;
        text-align: center;
        border: 1px solid #005574;
    }

    .managerCB .table-manager tbody tr:nth-child(even) {
        background-color: gainsboro;
    }

    .managerCB .table-manager tbody tr:nth-child(odd) {
        background-color: #ffff;
    }

    .control a {
        text-decoration: none;
        padding: 12px 27px 12px 27px;
        background: #33597C;
        color: #ffff;
        border-radius: 4px;
        float: right;
        margin-bottom: 5px;
        text-align: center
    }
</style>
<div class="link">
    <ul>
        <li><a href="">Quản lý đơn vé</a></li>

    </ul>
</div>

<div class="managerCB">
    <table class="table-manager">
        <thead>
            <tr>
                <td colspan="7">
                    <h1>Quản lý vé đặt</h1>
                </td>
            </tr>
            <tr>
                <th>Mã Đặt Vé</th>
                <th>Số Lượng Vé</th>
                <th>Tài Khoản Đặt</th>
                <th>Tổng tiền</th>
                <th>Mã Sân Bay Đi</th>
                <th>Trạng Thái</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaDatVe</td>
                    <td>@item.SoLuongVe</td>
                    <td>@item.TaiKhoanDat</td>
                    <td>@item.TongTien</td>
                    <td>@item.ChuyenBay.MaSanBayDi</td>

                    @if (item.TrangThai == "Đã xác nhận")
                    {
                        <td style="color:limegreen">@item.TrangThai</td>
                    }
                    else if (item.TrangThai == "Chưa thanh toán")
                    {
                        <td style="color:red">@item.TrangThai</td>
                    }
                    else if (item.TrangThai == "Yêu cầu hủy đơn")
                    {
                        cnpmNC.Models.HuyVe huyVe = new cnpmNC.Models.mapDatVe.mapDatVe().thongTinHuyVe(item.MaDatVe);
                        <td style="color:red">
                            @item.TrangThai

                            <span style="display:block">(Lý do: @huyVe.LyDo)</span>
                    </td>
                    }
                    else
                    {
                        <td style="color:darkgreen">@item.TrangThai</td>
                    }

                    <td>
                        @if (item.TrangThai == "Đã thanh toán")
                        {
                            <a href="~/QuanLyDatVe/XacNhanDatVe?MaDatVe=@item.MaDatVe" style="text-decoration:none">Xác nhận đặt vé</a>
                        }
                        else if (item.TrangThai == "Đã xác nhận")
                        {
                            <span></span>
                        }
                        else if (item.TrangThai == "Yêu cầu hủy đơn")
                        {
                            <a href="~/QuanLyDatVe/DuyetHuyDon?MaDatVe=@item.MaDatVe">Duyệt</a>
                            <a href="~/QuanLyDatVe/TuChoiHuyDon?MaDatVe=@item.MaDatVe">Từ chối</a>
                        }
                        else
                        {
                            <span></span>
                        }
                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>

