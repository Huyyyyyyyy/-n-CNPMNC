
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập</title>
    <link href="~/icons/themify-icons/themify-icons.css" rel="stylesheet" />
    <style>
        body {
            background: white;
            margin: 0;
            font-family: -apple-system,BlinkMacSystemFont, "Segoe UI",Roboto,"Helvetica Neue",Arial, "Noto Sans",sans-serif,"Apple Color Emoji", "Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
        }

        .page {
            background: #e2e2e5;
            display: flex;
            flex-direction: column;
            height: 100%;
            position: absolute;
            place-content: center;
            width: 100%;
        }

        .container {
            display: flex;
            height: 320px;
            margin: 0 auto;
            width: 640px;
        }

        .right {
            border-radius: 7px;
            background: #33597C;
            color: #F1F1F2;
            position: relative;
            width: 50%;
            height: fit-content;
            left:30%;
        }


        .form {
            margin: 20px;
        }

        label {
            color: #ffff;
            display: block;
            font-size: 14px;
            height: 16px;
            margin-top: 20px;
            margin-bottom: 5px;
        }

        input {
            display: block;
            box-sizing: border-box;
            width: 280px;
            height: 2.3125rem;
            padding: 10px;
            border: 1px solid #BCC8D7;
            font-family: inherit;
            font-size: 0.875rem;
            color: #636466;
            background-color: #fefefe;
            border-radius: 3px;
        }

        #submit {
            background: #ebbd40;
            color: #ffff;
            margin-top: 20px;
            transition: color 300ms;
            line-height: 15px;
        }

            #submit:hover {
                background-color: forestgreen;
                cursor: pointer;
                background-color: #e4a600;
            }
    </style>
</head>
<body>
    <div class="page">
        <div class="container">
            <div class="right">
                <form class="form" method="post">
                    <h1 style="text-align:center; font-size:25px">ĐĂNG NHẬP</h1>
                    <p style="font-size: 13px; line-height: 30px; border-radius: 10px; background: #D8594F; text-align: center; color: #ececec; font-weight: 500 ">
                        @ViewBag.thongBao
                </p>
                <label for="TenTK">Tài khoản</label>
                <input type="email" id="TenTK" name="TenTK" placeholder="Nhập tài khoản">
                <label for="password">Mật khẩu</label>
                <input type="password" id="password" name="MatKhau" placeholder="Nhập mật khẩu">
                <input type="submit" id="submit" value="ĐĂNG NHẬP">
                <p style="font-size:13px; text-align:center">Bạn chưa có tài khoản? <a style="color:#ffff" href="~/AccountUsers/DangKy">Đăng ký</a> tại đây</p>
            </form>
        </div>
    </div>
</div>
</body>
</html>

