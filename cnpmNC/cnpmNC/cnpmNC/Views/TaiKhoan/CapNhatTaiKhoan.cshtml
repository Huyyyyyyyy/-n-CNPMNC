@model cnpmNC.Models.TaiKhoan

@{
    ViewBag.Title = "CapNhatTaiKhoan";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<style>
    .link {
        width: 100%;
        height: 20px;
        margin: 50px 5px 5px 5px;
    }


        .link ul {
            width: 100%;
            list-style-type: none;
            display: flex;
        }

            .link ul a {
                text-decoration: none;
                font-weight: bold;
                font-size: 12px;
                color: #00305B;
            }

                .link ul a i {
                    margin: 0 10px 0 10px;
                }

    .form h1 {
        border-radius: 4px 4px 0 0;
        padding: 10px 20px;
        margin: 0 0 25px 0;
        background-color: #33597C;
        color: #fff;
        font-size: 18px;
        line-height: 22px;
    }

    .form {
        position: relative;
        background-color: #fff;
        border-radius: 4px;
        margin: 30px 30px 35px 30px;
        transition: box-shadow 200ms;
        width: 620px;
        display: inline-block;
    }


        .form .form-input input {
            display: block;
            box-sizing: border-box;
            width: 260px;
            height: 2.3125rem;
            padding: 0.5rem;
            border: 1px solid #BCC8D7;
            font-family: inherit;
            font-size: 0.875rem;
            color: #636466;
            background-color: #fefefe;
            border-radius: 3px;
        }

        .form .form-input select {
            display: block;
            box-sizing: border-box;
            width: 260px;
            height: 2.3125rem;
            padding: 0.5rem;
            border: 1px solid #BCC8D7;
            font-family: inherit;
            font-size: 0.875rem;
            color: #636466;
            background-color: #fefefe;
            border-radius: 3px;
        }

        .form .form-input label {
            font-size: 0.875rem;
            font-weight: bold;
            line-height: 1.8;
            color: #636466;
            margin-left: 20px;
        }

        .form .form-input {
            margin-right: 10px;
            height: 80px;
        }

    #submit {
        background: #ebbd40;
        color: #ffff;
        margin-top: 20px;
        transition: color 300ms;
        line-height: 15px;
    }

        #submit:hover {
            background-color: forestgreen;
            cursor: pointer;
            background-color: #e4a600;
        }
</style>
<div class="link">
    <ul>
        <li><a href="">Quản lý tài khoản<i class="ti-angle-double-right"></i></a></li>
        <li><a href="">Cập nhật</a></li>
    </ul>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form form-horizontal">
    <h1>Cập nhật tài khoản</h1>
    <div class="form-input form-group" style="display:inline-block;">
        <label for="TenTaiKhoan">Tên tài khoản</label>
        <div class="col-md-10">
            <input style="background:#ececec;" name="TenTaiKhoan" type="text" readonly value="@Model.TenTK" />
        </div>
    </div>
    @Html.HiddenFor(model => model.MatKhau)
    @Html.HiddenFor(model => model.A_MatKhau)
    @Html.HiddenFor(model => model.New_MatKhau)
    @Html.HiddenFor(model => model.A_New_MatKHau)
    <div class="form-input form-group" style="display:inline-block;">
        <label for="HoTen">Họ tên</label>
        <div class="col-md-10">
            <input name="HoTen" type="text" value="@Model.HoTen" />
        </div>
    </div>

    <div class="form-input form-group" style="display:inline-block;">
        <label for="SoDT">Số điện thoại</label>
        <div class="col-md-10">
            <input name="SoDT" type="number" value="@Model.SoDT" />
        </div>
    </div>

    <div class="form-input form-group" style="display:inline-block;">
        <label for="CCCD">Căn cước công dân</label>
        <div class="col-md-10">
            <input name="CCCD" type="number" value="@Model.CCCD" />
        </div>
    </div>

    <div class="form-input form-group" style="display:inline-block;">
        <label for="QuyenTruyCap">Quyền truy cập</label>
        <div class="col-md-10">
            <select name="QuyenTruyCap">
                <option value="user">Người dùng</option>
                <option value="admin">Quản trị viên</option>
            </select>
        </div>
    </div>

        <div class="form-input form-group" style="display:inline-block;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="submit" class="btn btn-default" value="LƯU"/>
            </div>
        </div>
    </div>
    }


