@{
    var user = (cnpmNC.Models.TaiKhoan)System.Web.HttpContext.Current.Session["user"];
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AIRWAYS</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- link icons -->
    <link rel="stylesheet" href="~/icons/themify-icons/themify-icons.css">
    <style>
        body {
            font-size: 15px;
            vertical-align: middle;
            line-height: 18px;
            font-weight: normal !important;
            margin: 0;
            font-family: Roboto;
        }

        .top {
            width: 100%;
            height: 45px;
            position: fixed;
            z-index: 999;
        }

            .top .manager {
                text-decoration: none;
                color: #ffff;
                padding: 17px;
                line-height: 45px;
                border-radius: 4px;
                text-align: center;
            }

                .top .manager:hover {
                    color: #222;
                    background: #DCA413;
                }

            .top .profile {
                text-decoration: none;
                color: #ffff;
                border-radius: 4px;
                text-align: center;
                padding: 10px 10px 10px 10px;
            }

                .top .profile:hover {
                    background: #DCA413;
                }


    </style>
</head>
<body>
    <div class="full">
        <div class="top" style="background: #005574">
            <a class="manager" href="~/Home/TrangChu">TRANG CHỦ</a>
            <a class="manager" href="~/DatVe/DatVe">ƯU ĐÃI</a>
            <a class="manager" href="~/DatVe/DatVe">THÔNG TIN SÂN BAY</a>
            <a class="manager" href="~/DonVeCuaToi/DonVeCuaToi">ĐƠN VÉ CỦA TÔI</a>
            <a class="manager" href="~/ChuyenBayCuaToi/ChuyenBayCuaToi">CHUYẾN BAY CỦA TÔI</a>

            <a class="profile" style="float:right" href=""><i class="ti-settings"></i></a>

            @{
                if (user != null)
                {
                    <a style="color: #005574; font-weight:bold;border-radius:7px; float: right; text-decoration: none; padding: 3px; margin: 10px; background-color: #ececec;" class="log-out" href="~/AccountUsers/DangXuat">Đăng xuất</a>
                }
                else
                {
                }
            }
            <p style="float:right; line-height:42px; color: #ececec; padding-right:5px">
                @{ if (user == null)
                    {
                        <script>
                      //Kiểm tra xem phiên đăng nhập đã hết hạn hay chưa
                      // Hiển thị thông báo
                      alert("Phiên đăng nhập đã hết hạn!");

                      // Chuyển hướng đến action khác ( "DangNhap" action trong "AccountUsers")
                      window.location.href = '@Url.Action("DangNhap", "AccountUsers")';
                        </script>
                    }
                    else
                    { <span>Hi, @user.HoTen</span>}
                }
            </p>
        </div>
        <!--   Code phan main   -->
        <div class="main" style="background: #EDF3F7; min-height:1000px;">
            @RenderBody()
        </div>
        <div style="padding: 7px; background: #005574" class="footer">
            <p style="color: #ececec; text-align:center; font-weight:200; line-height:50px">© 2023 Group 21 . All rights reserved. This line of text notifies others that the work is protected by copyright</p>
        </div>
    </div>
</body>
</html>
<script>
        $(document).ready(function () {
            //Kiểm tra xem phiên đăng nhập đã hết hạn hay chưa
            if (@User.Identity.IsAuthenticated.ToString().ToLower() == "false") {
                // Hiển thị thông báo
                alert("Phiên đăng nhập đã hết hạn!");

            // Chuyển hướng đến action khác ( "DangNhap" action trong "AccountUsers")
                window.location.href = '@Url.Action("DangNhap", "AccountUsers")';
            }
        });
</script>
