    var DiaDiemDi = new cnpmNC.Models.mapSanBay.mapSanBay().TimSanBay(ChuyenBayDaChon.MaSanBayDi);

    var DiaDiemDen = new cnpmNC.Models.mapSanBay.mapSanBay().TimSanBay(ChuyenBayDaChon.MaSanBayDen);

