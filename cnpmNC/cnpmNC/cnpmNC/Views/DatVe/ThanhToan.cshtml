        <div class="voucher-summary">
            <span style="line-height:20px"><i style="color: #005574; font-size:18px; font-weight:600" class="ti-receipt"></i>&nbsp;Ưu đãi</span>
            <a onclick="showDetailVoucher()" style="float:right">
                Chọn voucher  @{
                    if (MaUuDai == "UD0001")
                    {

                    }

                    else
                    {
                        <span>: @MaUuDai</span>
                    }
                }
                <i class="ti-angle-down"></i>
            </a>
        </div>
        <div class="detail-voucher-summary" id="detail-voucher-summary">
            <div class="content">
                <form>
                    <input name="SoLuong" value="@SoLuong" hidden />
                    <input name="MaChuyenBay" value="@MaChuyenBay" hidden />
                    <input name="MaDatVe" value="@MaDatVe" hidden />
                    <select id="myVoucher" name="MaUuDai">

                        @foreach (var item in new cnpmNC.Models.mapUuDai.mapUuDai().DanhSachUuDai())
                        {
                            if (item.MaUD == "UD0001")
                            {
                                <option selected value="@item.MaUD">Chọn mã ưu đãi</option>
                            }
                            else
                            {
                                <option value="@item.MaUD">(@item.MaUD) Giảm @item.MucUD%</option>

                            }
                        }
                    </select>
                    <input class="button" type="submit" value="Áp dụng" />
                </form>
            </div>
            <div class="info-voucher">
                @if (MaUuDai == "UD0001")
                {

                }
                else
                {
                    // lấy ra thông tin Uu đãi chọn
                    cnpmNC.Models.UuDai ThongTinUuDai = new cnpmNC.Models.mapUuDai.mapUuDai().LayThongTinUuDai(MaUuDai);

                    //lấy ra mức ưu đãi
                    int MucUD = ThongTinUuDai.MucUD;
                    // Tính toán khoảng thời gian giữa ngày tháng hiện tại và ngày tháng mục tiêu
                    TimeSpan remainingTime = ThongTinUuDai.ThoiGianUD - DateTime.Now;
                    <span style="font-size:14px">Hết hạn trong @Math.Round(remainingTime.TotalDays, 0) ngày (@Math.Round(remainingTime.TotalHours, 0) giờ)</span>
                }
            </div>
        </div>

        <div class="total-flight">
            <span style="font-weight:bold; font-size:20px;">Tổng</span>
            <span style="float: right; color: #005574; font-weight:bold; font-size:20px">
                @{
                    if (MaUuDai == "UD0001")
                    {
                        string TongChuaUuDai = string.Format("{0:#,##0}", ChuyenBayDaChon.GiaVe * SoLuong);
                        @TongChuaUuDai<sup style="font-weight:400">VND</sup>
                        ThanhTien = ChuyenBayDaChon.GiaVe;
                    }
                    else
                    {
                        // lấy ra thông tin Uu đãi chọn
                        cnpmNC.Models.UuDai ThongTinUuDai = new cnpmNC.Models.mapUuDai.mapUuDai().LayThongTinUuDai(MaUuDai);

                        //lấy ra mức ưu đãi

                        decimal MucUD = Convert.ToDecimal(ThongTinUuDai.MucUD);

                        int TonDaUuDai = Convert.ToInt32(ChuyenBayDaChon.GiaVe*SoLuong - (ChuyenBayDaChon.GiaVe * SoLuong * (MucUD / 100)));
                        string TongDaUuDai = string.Format("{0:#,##0}", TonDaUuDai);
                        @TongDaUuDai<sup style="font-weight:400">VND</sup>
                    }
                }
            </span>
        </div>
    </div>
</div>

