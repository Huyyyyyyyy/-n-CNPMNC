                        TimeSpan minute = TimeSpan.FromHours(phutBay);
                        string phut = minute.ToString();

                        string thoiGianBay = gioBay + " hrs " + phutBay + " mins ";
                        @thoiGianBay

                        if (ChiTietChuyenBayDaChon.MaSanBayTG == null)
                        {
                            <span>
