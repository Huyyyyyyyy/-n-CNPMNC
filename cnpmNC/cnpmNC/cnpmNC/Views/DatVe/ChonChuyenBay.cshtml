@*thay đổi thông tin đã chọn*@
<div id="search-place" class="search-place">
    <form action="~/DatVe/ChonChuyenBay" method="get">
        <table>
            <thead>
                <tr>
                    <th colspan="6">
                        <span><i style="font-size:20px" class="ti-pencil-alt"></i>&nbsp;&nbsp;THAY ĐỔI LỊCH TRÌNH</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <label for="MaSanBayDi">Từ</label>
                        <select name="MaSanBayDi" required>
                            <option selected disabled>Chọn điểm đi</option>
                            @foreach (var item in new cnpmNC.Models.mapSanBay.mapSanBay().DanhSachThanhPho())
                            {
                                <option value="@item.MaSanBay" @Html.Raw(item.MaSanBay == MaSanBayDi ? "selected" : "")>@item.DiaDiem (@item.MaSanBay)</option>
                            }
                        </select>
                    </td>
                    <td><i style=" font-weight: 700; font-size: 20px; color: #005574" class="ti-arrows-horizontal"></i></td>
                    <td>
                        <label for="MaSanBayDen">Đến</label>
                        <select name="MaSanBayDen" required>
                            <option selected disabled>Chọn điểm đến</option>
                            @foreach (var item in new cnpmNC.Models.mapSanBay.mapSanBay().DanhSachThanhPho())
                            {
                                <option value="@item.MaSanBay" @Html.Raw(item.MaSanBay == MaSanBayDen ? "selected" : "")>@item.DiaDiem (@item.MaSanBay)</option>
                            }
                        </select>
                    </td>
                    <td>
                        <label for="NgayKhoiHanh">Ngày đi</label>
                        <input style="border:none; border-bottom:1px solid #005574; height:55%" type="date" name="NgayKhoiHanh" min="@tomorrowString" value="@tomorrowString" />
                    </td>
                    <td>
                        <label for="SoLuong">Hành khách</label>
                        <input style="border:none; border-bottom:1px solid #005574; height:55%; text-align:center" name="SoLuong" type="number" min="1" max="4" value="@SoLuong" />
                    </td>
                    <td>
                        <button type="submit" class="btn-submit">LƯU THAY ĐỔI</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>

@*hiển thị kết quả chuyến bay đã tra cứu*@

<div class="content">
    <span style="font-size: 25px; display: block; line-height: 30px; font-weight: bold; color: #005574">Chọn Chuyến Bay</span>
    <span style="font-weight: 400; ">Có (@tong) kết quả</span>
</div>

@{
    //nếu không có chuyến bay sẽ báo (No-result)
    if (tong == 0)
    {
        <div class="no-result">
            <i style="font-size:30px;font-weight:400; float:left; padding:10px;" class="ti-face-sad"></i>
            <span style="font-size:18px; font-weight:600; line-height:30px;">Không tìm thấy chuyến bay bạn muốn</span>
            <span style="font-weight: 400; font-size: 14px; display: block">Vui lòng chọn ngày khác</span>
        </div>
    }
    //Nếu có sẽ hiện (have-result)
    else
    {
        <div class="date-flights">
            <span>@string.Format("{0:dddd, dd MMMM yyyy}", NgayKhoiHanh)</span>
        </div>
        foreach (var item in Model)
        {
            <div class="have-result">
                <div class="flight-result">
                    <div class="info-flight">
                        <table>
                            <tbody>
                                <tr>
                                    <td style="font-size: 25px; font-weight:600; color: #00305B">@string.Format("{0:hh\\:mm}", item.GioKhoiHanh)</td>
                                    <td style="text-align: center; font-size: 30px; color: #ebbd40; padding: 15px 80px 5px 80px "><span class="ti-arrow-circle-right"></span></td>
                                    <td style="font-size: 25px; font-weight: 600; color: #00305B">@string.Format("{0:hh\\:mm}", item.GioHaCanh)</td>
                                    <td> <span class="ti-flickr" style="color: #ebbd40; padding:5px;"></span>@item.MaChuyenBay</td>
                                </tr>
                                <tr>
                                    <td style="color: #222; font-weight: 600; font-size: 20px;">@item.MaSanBayDi</td>
                                    <td></td>
                                    <td style="color: #222; font-weight: 600; font-size: 20px;">@item.MaSanBayDen</td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        @{
                                            int gioBay = item.GioBay;
                                            TimeSpan hour = TimeSpan.FromHours(gioBay);
                                            string gio = hour.ToString();

                                            int phutBay = item.PhutBay;
                                            TimeSpan minute = TimeSpan.FromHours(phutBay);
                                            string phut = minute.ToString();

                                            string thoiGianBay = gioBay + " hrs " + phutBay + " mins ";
                                            @thoiGianBay

                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <a style="cursor:pointer" onclick="showDetails()">Chi tiết <i class="ti-angle-down"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="price-flight">
                        @{ if (item.TinhTrang == "Opening")
                            {
                                <a href="~/DatVe/ThongTinHanhKhach?SoLuong=@SoLuong&MaChuyenBay=@item.MaChuyenBay">
                                    @string.Format("{0:#,##0}", item.GiaVe) VND
                                </a>
                                <span style="float:right; position:relative; top:20%;right:0" class="ti-angle-right"></span>
                            }
                            else
                            {
                                <span style="cursor:not-allowed">Chưa mở bán vé cho chuyến bay này</span>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    }
}


@*xử lý ẩn hiển phần chỉnh sửa (search)*@
<script>
    function hideElement() {
        var element = document.getElementById("search-place");
        if (element.style.display == "inline-block") {
            element.style.display = "none"
        } else {
            element.style.display = "inline-block";
        }

    }
</script>


