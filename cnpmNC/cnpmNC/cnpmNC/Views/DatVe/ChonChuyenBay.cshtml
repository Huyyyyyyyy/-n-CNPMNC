@model List<cnpmNC.Models.ChuyenBay>
@{
    ViewBag.Title = "ChonChuyenBay";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
    // tạo biến lưu số lượng hành khách
    int SoLuong = 0;
