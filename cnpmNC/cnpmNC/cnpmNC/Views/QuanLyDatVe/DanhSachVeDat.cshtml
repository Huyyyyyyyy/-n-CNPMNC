@model IEnumerable<cnpmNC.Models.DatVe>

@{
    ViewBag.Title = "DanhSachVeDat";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<style>
    .link {
        width: 100%;
        height: 20px;
        margin: 50px 5px 5px 5px;
    }

        .link ul {
            width: 100%;
            list-style-type: none;
            display: flex;
        }

            .link ul a {
                text-decoration: none;
                font-weight: bold;
                font-size: 12px;
                color: #00305B;
            }

                .link ul a i {
                    margin: 0 10px 0 10px;
                }

    .managerVD {
        display: block;
        justify-items: center;
    }

        .managerVD h1 {
            border-radius: 4px 4px 0 0;
            padding: 10px 20px;
            margin: 0px 0 5px 0;
            background-color: #005574;
            color: #fff;
            font-size: 18px;
            line-height: 22px;
        }

        .managerVD .table-manager thead th {
            color: #222;
            width: 150px;
            height: 50px;
            text-align: center;
            border: 1px solid #005574;
            background-color: #ebbd40;
        }

        .managerVD .table-manager tbody td {
            width: 150px;
            height: 50px;
            text-align: center;
            border: 1px solid #005574;
        }

        .managerVD .table-manager tbody tr:nth-child(even) {
            background-color: gainsboro;
        }

        .managerVD .table-manager tbody tr:nth-child(odd) {
            background-color: #ffff;
        }

    .control a {
        text-decoration: none;
        padding: 12px 27px 12px 27px;
        background: #33597C;
        color: #ffff;
        border-radius: 4px;
        float: right;
        margin-bottom: 5px;
    }
</style>
<h2>DanhSachVeDat</h2>

<div class="managerVD">
    <table class="table-manager">
        <thead>
            <tr>
                <td colspan="7">
                    <h1>Quản lý vé đặt</h1>
                </td>
            </tr>
            <tr>

                <th>Mã Đặt Vé</th>
                <th>Số Lượng Vé</th>
                <th>Tài Khoản Đặt</th>
                <th>Tổng tiền</th>
                <th>Mã Sân Bay Đi</th>
                <th>Trạng Thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaDatVe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuongVe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaiKhoanDat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TongTien)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChuyenBay.MaSanBayDi)
                    </td>

                    @if (item.TrangThai == "Done")
                    {
                        <td style="color:limegreen">
                            @Html.DisplayFor(modelItem => item.TrangThai)
                        </td>
                    }
                    else if (item.TrangThai == "Chưa thanh toán")
                    {
                        <td style="color:red">
                            @Html.DisplayFor(modelItem => item.TrangThai)
                        </td>
                    }
                    else
                    {
                        <td style="color:yellow">
                            @Html.DisplayFor(modelItem => item.TrangThai)
                        </td>
                    }

                    <td>
                        @if (item.TrangThai == "Đã thanh toán")
                        {
                            <a href="~/QuanLyDatVe/XacNhanDatVe?MaDatVe=@item.MaDatVe" style="text-decoration:none">Xác nhận đặt vé</a>
                        }
                        else if (item.TrangThai == "Done")
                        {
                            <span></span>
                        }
                        else
                        {
                            <span>Xác nhận đặt vé</span>
                        }
                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>

